<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="16dp"
    android:background="@drawable/bg_stat_card">

    <TextView
        android:id="@+id/tvStatHabitName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Привычка: Имя"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"
        android:textColor="?attr/colorOnSurface" />

    <TextView
        android:id="@+id/tvPeriodInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tvAverage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="В среднем выполнено:"
        android:layout_marginBottom="4dp"
        android:textColor="?attr/colorOnSurface" />

    <TextView
        android:id="@+id/tvPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="80%"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginBottom="4dp"
        android:textColor="?attr/colorPrimary" />

    <TextView
        android:id="@+id/tvComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Комментарий"
        android:textSize="12sp"
        android:layout_marginBottom="4dp"
        android:textColor="?attr/colorOnSurfaceVariant" />

    <TextView
        android:id="@+id/tvDoneCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="Привычка выполнена 4 раза из 7 дней"
        android:textColor="?attr/colorOnSurface" />

</LinearLayout>
